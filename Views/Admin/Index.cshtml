@using TravelTripProject.Models.Classes
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Blog List</h4>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach(var blog in Model)
    {
        <tr>
            <td>@blog.ID</td>
            <td>@blog.Title</td>
            <td><a href="/Admin/DeleteBlog/@blog.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/GetBlog/@blog.ID" class="btn btn-warning">Update</a></td>
            <td><a href="/Blog/BlogDetails/@blog.ID" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
<a href="/Admin/NewBlog" class="btn btn-primary">New Blog</a>
